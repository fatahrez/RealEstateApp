    <HorizontalScrollView
        android:id="@+id/imageCarousel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/coverPhotoImageView"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/photo1ImageView"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>

            <ImageView
                android:id="@+id/photo2ImageView"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>

            <ImageView
                android:id="@+id/photo3ImageView"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>

            <ImageView
                android:id="@+id/photo4ImageView"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>
        </LinearLayout>

    </HorizontalScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createPropertyListingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/list_property"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>