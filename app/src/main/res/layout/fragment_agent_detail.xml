<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/agent_profile_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/account_circle"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerRound"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/agent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/agent_profile_photo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/black"
                tools:text="Agent Name" />

            <TextView
                android:id="@+id/agent_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/agent_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/lato_regular"
                tools:text="Email: agent_email@example.com" />

            <TextView
                android:id="@+id/agent_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/agent_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/lato_regular"
                tools:text="Phone: +1-123-456-7890" />

            <TextView
                android:id="@+id/agent_about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/agent_phone_number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"
                tools:text="About Me: Lorem ipsum dolor sit amet, consectetur adipiscing elit." />

            <TextView
                android:id="@+id/agent_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/agent_about_me"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/lato_regular"
                tools:text="License: None" />

            <TextView
                android:id="@+id/agent_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/agent_license"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/lato_regular"
                tools:text="Gender: Other" />

            <TextView
                android:id="@+id/agent_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/agent_gender"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/lato_regular"
                tools:text="Location: Country, City" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>